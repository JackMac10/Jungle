<section class="admin-categories-index">
  <div class="container">
    <h1>Categories</h1>
    <%= link_to 'New Category', new_admin_category_path, class: 'btn btn-primary mb-3' %>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>