<section class="admin-dashboard">
  <header class="page-header">
    <h1>Admin Dashboard</h1>
  </header>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6">
        <div class="card text-white bg-primary mb-3">
          <div class="card-body">
            <h5 class="card-title">Products</h5>
            <p class="card-text"><%= @product_count %> products in the database</p>
            <a href="<%= admin_products_path %>" class="btn btn-light">View Products</a>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card text-white bg-secondary mb-3">
          <div class="card-body">
            <h5 class="card-title">Categories</h5>
            <p class="card-text"><%= @category_count %> categories in the database</p>
            <a href="<%= admin_root_path %>" class="btn btn-light">View Categories</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>